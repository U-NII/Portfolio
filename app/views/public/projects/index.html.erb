  <div class="container">
    <div class="row">
      <h2 class="col-3 align-self-start text-center text-white bg-secondary mt-4">商品一覧(全<%= @projects.total_count %>件)</h2>
      <div class="col-12">
        <div class="d-inline-flex flex-row flex-wrap product_index p-4">
            <% @projects.each do |project| %>
              <% if project.genre.is_valid == true %>
              <table class="d-inline-block ml-5 mr-3 mt-2">
                <tr class="image-link">
                  <td>
                    <%= link_to public_project_path(project) do %>
                      <%= attachment_image_tag(project, :image, format: 'jpg', size: "200x150", fallback: "no_image.jpg") %>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td><%= link_to project.name,public_project_path(project) %></td>
                </tr>
                <tr>
                  <td>¥<%= project.price.to_s(:delimited) %></td>
                </tr>
              </table>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
    <div class="center-block mx-auto"><br><br>
      <%= paginate(@projects) %>
    </div>
  </div>