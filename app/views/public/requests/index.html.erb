<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4 class="mt-3">注文履歴一覧</h4>
      <table class="table-light table table-hover">
        <thead class="table-secondary">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払い金額</th>
            <th>ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @requests.each do |request| %>
          <tr>
            <td><%= request.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <%= request.name %></ br>
            </td>
            <td>
              <% request.request_projects.each do |request_project| %>
              <%= order_project.project.name %></ br>
              <% end %>
            </td>
            <td><%= request.total_price %>円</td>
            <td><%= request.buy_status %></td>
            <td><%= link_to "表示する", public_request_path(request), class: "btn btn-dark btn-sm" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
