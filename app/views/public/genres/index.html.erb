<div>
  <div class="container">
    <div class="row">
      <h2 class="col-2 text-center text-white align-self-start bg-secondary mt-4">ジャンル一覧</h2>
      <table class="table table-light table-hover">
        <thead class="thead-light">
          <tr class = text-cente>
            <th></th>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td></td>
              <td><%= link_to genre.name, public_genre_path(genre)  %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>