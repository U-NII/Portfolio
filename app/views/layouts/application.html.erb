<!DOCTYPE html>
<html>
  <head>
    <title>Offing</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="pt-4 pb-3">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <% if admin_signed_in? %>
          <%= link_to "OFFING",admin_requests_path, class: 'mt-2 mb-3 text-dark' %>
          <% else %>
          <%= link_to "OFFING",root_path, class: 'mt-2 mb-3 text-dark' %>
          <% end %>
          <nav>
          <ul class="navbar-nav ml-auto p-3">
          <% if member_signed_in? %>
          <li class="nav-item"><%= link_to "マイページ",member_path(current_member), class: 'text-dark' %></li>
          <li class="nav-item"><%= link_to "イベント一覧",projects_path, class: 'text-dark' %></li>
          <li class="nav-item"><%= link_to "カート",cart_products_path, class: 'text-dark' %></li>
          <li class="nav-item"><%= link_to "ログアウト",destroy_member_session_path, method: :delete, class: 'text-dark' %></li>
          <% elsif admin_signed_in? %>
          <li class="nav-item"><%= link_to "イベント一覧",admin_projects_path, class: 'text-dark' %></li>
          <li class="nav-item"><%= link_to "会員一覧",admin_members_path, class: 'text-dark' %></li>
          <li class="nav-item"><%= link_to "注文履歴一覧",admin_requests_path, class: 'text-dark' %></li>
          <li class="nav-item"><%= link_to "ジャンル一覧",admin_genres_path, class: 'text-dark' %></li>
          <li class="nav-item"><%= link_to "ログアウト",destroy_admin_session_path,method: :delete, class: 'text-dark' %></li>
          <% else %>
          <li class="nav-item"><%= link_to "About",about_path, class: 'text-dark' %></li>
          <li class="nav-item"><%= link_to "イベント一覧", admin_projects_path, class: 'text-dark' %></li>
          <li class="nav-item"><%= link_to "ログイン", new_member_session_path, class: 'text-dark' %></li>
          <li class="nav-item"><%= link_to "新規登録", new_member_registration_path, class: 'text-dark' %></li>
          <% end %>
          </ul>
          </nav>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer class="pt-5 pb-4">
      <div>
        <p class="text-center">OFFING</p>
      </div>
    </footer>
  </body>
</html>
